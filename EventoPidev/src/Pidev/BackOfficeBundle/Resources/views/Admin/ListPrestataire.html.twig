{% extends "PidevBackOfficeBundle::ListPrestataireAdmin.html.twig" %}
 

{% block listclient %}
    
<div class="panel panel-pink">
                          
    <div class="panel-heading">Prestataire</div>
                            <div class="panel-body">
                                <table class="table table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Username</th>
                                        <th>Matricule</th>
                                        <th>Email</th>
                                        <th>Statut</th>
                                        <th>Détail</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in clients  %}
                                 
                                         <tr>
                                        <td>{{user.id}}</td>
                                        <td>{{user.username}}</td>
                                        <td>{{user.matriculeFiscal}}</td>
                                        <td> {{user.email}}</td>
                                      <td>  {%  if  user.locked %}
                                      <span class="label label-sm label-danger">Bloqué</span>
                                          
                                            {% else %}
