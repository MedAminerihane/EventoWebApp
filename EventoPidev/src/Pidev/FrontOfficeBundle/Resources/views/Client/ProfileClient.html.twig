{% extends "PidevFrontOfficeBundle::ProfileClient.html.twig" %}

{% block profil_content %}
<table class="table table-striped table-hover">
                                    <tbody>
                                    <tr>
                                        <td>User Name</td>
                                        <td>{{app.user.username}}</td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td>{{app.user.email}}</td>
                                    </tr>
                                    <tr>
                                        <td>Addresse</td>
                                        <td>{{app.user.adresse}}</td>
                                    </tr>
                                    <tr>
                                        <td>Statut</td>
                                        <td><span class="label label-success">Actif</span></td>
                                    </tr>
